<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toast_bg"
    android:paddingHorizontal="44px"
    android:paddingVertical="30px">

    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/toast_icon_warn" />

    <TextView
        android:id="@+id/tv_tip"
        style="@style/Widget_Text"
        android:singleLine="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="480px"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginEnd="44px"
        android:layout_marginStart="160px"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="36px" />
</LinearLayout>